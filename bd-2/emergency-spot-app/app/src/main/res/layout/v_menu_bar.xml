<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="#4291B9"
    android:layout_height="75dp">

    <pl.mzlnk.emergencyspot.ui.view.menu.MenuItem
        android:id="@+id/v_menu_bar_menu_item_add_patient"
        android:layout_width="70dp"
        android:layout_height="60dp"
        app:icon="@drawable/d_menu_item_add_patient"
        app:label="@string/menu_add_patient" />

    <pl.mzlnk.emergencyspot.ui.view.menu.MenuItem
        android:id="@+id/v_menu_bar_menu_item_hospitals"
        android:layout_width="70dp"
        android:layout_height="60dp"
        app:icon="@drawable/d_menu_item_hopsitals"
        app:label="@string/menu_add_patient" />

    <pl.mzlnk.emergencyspot.ui.view.menu.MenuItem
        android:id="@+id/v_menu_bar_menu_item_map"
        android:layout_width="70dp"
        android:layout_height="60dp"
        app:icon="@drawable/d_menu_item_map"
        app:label="@string/menu_map" />

    <pl.mzlnk.emergencyspot.ui.view.menu.MenuItem
        android:id="@+id/v_menu_bar_menu_item_hospital_stays"
        android:layout_width="70dp"
        android:layout_height="60dp"
        app:icon="@drawable/d_menu_item_hospital_stay"
        app:label="@string/menu_hospital_stay" />

    <pl.mzlnk.emergencyspot.ui.view.menu.MenuItem
        android:id="@+id/v_menu_bar_menu_item_profile"
        android:layout_width="70dp"
        android:layout_height="60dp"
        app:icon="@drawable/d_menu_item_profile"
        app:label="@string/menu_profile" />

</LinearLayout>