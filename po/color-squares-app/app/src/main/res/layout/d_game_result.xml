<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/d_dialog_background"
    android:layout_width="300dp"
    android:layout_height="450dp"
    android:gravity="center"
    android:id="@+id/d_game_result_layout_main" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.4" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Winner"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/d_game_result_text_winner_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:textColor="#44ffffff"
            android:text="Player 1"
            android:textStyle="bold"
            android:textSize="45dp"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/d_game_result_text_winner_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:text="39.74%"
            android:textAlignment="center" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:text="All players" />

    <ScrollView
        android:layout_width="270dp"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:id="@+id/d_game_result_layout_all_players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

</LinearLayout>