<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a1a1a"
    tools:context=".ui.fragment.gamesetup.GameSetupPlayerFragment"
    android:id="@+id/f_game_setup_player_layout_main" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="0.5" >

        <RelativeLayout
            android:id="@+id/f_game_setup_player_layout_grid"
            android:layout_width="280dp"
            android:layout_height="280dp" />

        <View
            android:layout_width="282dp"
            android:layout_height="282dp"
            android:background="@drawable/d_map_border" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/f_game_setup_player_text_color_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="#808080"
            android:text="You" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose color"
            android:textSize="20sp"
            android:textColor="#d5ffffff"
            android:textAlignment="center" />

        <SeekBar
            android:id="@+id/f_game_setup_player_seekbar_color_picker_1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:progressBackgroundTint="#ffffff"
            android:progress="128"
            android:max="255"
            android:layout_gravity="center"/>

        <SeekBar
            android:id="@+id/f_game_setup_player_seekbar_color_picker_2"
            android:layout_width="250dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:progress="128"
            android:max="255"
            android:progressBackgroundTint="#ffffff"
            android:layout_gravity="center"/>

        <SeekBar
            android:id="@+id/f_game_setup_player_seekbar_color_picker_3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:progress="128"
            android:max="255"
            android:progressBackgroundTint="#ffffff"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center" >

        <Button
            android:id="@+id/f_game_setup_player_button_start"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="start game"
            android:textColor="#ffffff"
            android:background="@drawable/d_map_border"/>

    </LinearLayout>


</LinearLayout>